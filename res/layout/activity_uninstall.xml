<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/uninstall_logo"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
       />

    <EditText
        android:id="@+id/unistall_pwd"
        
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/uninstall_logo"
        android:layout_centerHorizontal="true"
       
        android:hint="1111"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:singleLine="true" />

    <TextView
        android:id="@+id/unistall_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/unistall_pwd"
        android:layout_below="@+id/unistall_pwd"
        android:text="vvvvv"
        />
    
    <TextView
        android:id="@+id/forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/unistall_pwd"
        android:layout_below="@+id/unistall_pwd"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/buttonPanel"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/unistall_pwd"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="OK"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="cancel"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iphone_progress_dialog_img"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_centerInParent="true" />

</RelativeLayout>